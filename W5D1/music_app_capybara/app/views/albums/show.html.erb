<h2 class = "page-header"><%=@album.title%><h2>
  <ul>
    <li>BY: <%= Band.find(@album.band_id).name %></li>
    <li><%= @album.year %></li>
    <% if @album.studio %>
    <li>Studio Album</li>
    <% else %>
    <li>Live Album</li>
    <% end %>
  <ul>
<br>

<ul class="main-list">
  <% @album.tracks.each do |track| %>
    <li><a href= "<%=track_url(track)%>">
      <p><%= track.title %></p></a>
    </li>
  <%end%>
</ul>

<ul class="page-links">
  <li>
    <a class="button" href="<%=new_album_track_url(@album)%>">Create New Track</a>
  </li>

  <li>
    <a class = "button" href="<%=edit_album_url(@album)%>">Edit Album</a>
  </li>
  <li>
  <form action="<%=album_url(@album)%>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <%= auth_token %>
    <input type="submit" value="Destroy album">
  </form>

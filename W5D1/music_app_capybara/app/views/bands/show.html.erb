<h2 class ="page-header"><%= @band.name %></h2>

<ul class="main-list">
  <% @band.albums.each do |album| %>
    <li><a href= "<%=album_url(album)%>">
      <p><%= album.title %></p></a>
    </li>
  <%end%>
</ul>

<ul class="page-links">
  <li>
    <a class="button" href="<%=new_band_album_url(@band)%>">Create New Album</a>
  </li>
  <li>
    <a class="button"href="<%=edit_band_url(@band)%>">Edit Band</a>
  </li>
  <li>
    <form action="<%=band_url(@band)%>" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <%= auth_token %>
      <input type="submit" value="Destroy band">
    </form>
  </li>
  <li>
    <a class="button" href="<%= new_band_url %>">Create New Band</a>
  </li>


</ul>
